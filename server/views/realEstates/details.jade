extends ../shared/layout
block main-content
    form(method="post", action="/real-estates/delete/#{estate.id}")
        h1.text-center= estate.type
        .panel.panel-warning
            .panel-heading
                h3.panel-title Image
            .panel-body
                img(src="images/#{estate.image}")
        .panel.panel-warning
            .panel-heading
                h3.panel-title Address
            .panel-body
                div=estate.city
                div=estate.address
        .panel.panel-warning
            .panel-heading
                h3.panel-title Price
            .panel-body
                div=estate.price
        .panel.panel-warning
            .panel-heading
                h3.panel-title More information
            .panel-body
                div=estate.quadrature
                div=estate.moreInformation
        if(estateModerate)
            a.btn.btn-warning.pull-right(href='/real-estates/#{estate.id}/edit') Edit
            button.btn.btn-warning.pull-right(type='submit') Delete